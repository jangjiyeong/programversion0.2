<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#FFFBF0</item>

        <item name="android:textColorPrimary">#0084C4</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">#999999</item>     <!-- 탭바 텍스트 -->

        <item name="colorAccent">#0084C4</item>                    <!-- 하단 움직이는 바 색-->
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">24dp</item>
    </style>

</resources>