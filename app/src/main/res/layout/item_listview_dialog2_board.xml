<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_menu3"
            android:layout_width="1200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="보드종류"></TextView>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:text="보드타입"></TextView>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:text="보드버전"></TextView>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:text="보드코드"></TextView>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:text="칩셋"></TextView>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:text="칩셋부품명"></TextView>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:text="칩셋"></TextView>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:text="칩셋부품명"></TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/temp1_spinner_board_dialog"
                            android:layout_width="120dp"
                            android:layout_height="44dp"
                            android:background="@drawable/spinner_background" />

                        <Spinner
                            android:id="@+id/temp2_spinner_board_dialog"
                            android:layout_width="120dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/spinner_background" />

                        <EditText
                            android:id="@+id/edt_board_version_dialog"
                            android:layout_width="120dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/text_border"
                            android:paddingLeft="5dp"
                            android:text="" />


                        <EditText
                            android:id="@+id/edt_board_code_dialog"
                            android:layout_width="120dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/text_border"
                            android:paddingLeft="5dp"
                            android:text="" />

                        <Spinner
                            android:id="@+id/temp3_spinner_board_dialog"
                            android:layout_width="120dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/spinner_background" />

                        <EditText
                            android:id="@+id/edt_board_chip_name1_dialog"
                            android:layout_width="120dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/text_border"
                            android:paddingLeft="5dp"
                            android:text="" />

                        <Spinner
                            android:id="@+id/temp4_spinner_board_dialog"
                            android:layout_width="120dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/spinner_background"/>

                        <EditText
                            android:id="@+id/edt_board_chip_name2_dialog"
                            android:layout_width="250dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/text_border"
                            android:paddingLeft="5dp"
                            android:text="" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:text="등록유형"></TextView>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="주문유형"></TextView>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:text="모델"></TextView>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:text="이전버전"></TextView>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:text="변경버전"></TextView>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:text="메뉴얼"></TextView>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:text="배포일자"></TextView>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:text="작성자"></TextView>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:text="세트"></TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:paddingBottom="2dp">

                        <Spinner
                            android:id="@+id/temp5_spinner_board_dialog"
                            android:layout_width="120dp"
                            android:layout_height="44dp"
                            android:background="@drawable/spinner_background" />

                        <Spinner
                            android:id="@+id/temp6_spinner_board_dialog"
                            android:layout_width="120dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/spinner_background"/>

                        <Spinner
                            android:id="@+id/temp7_spinner_board_dialog"
                            android:layout_width="120dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/spinner_background"/>

                        <Button
                            android:id="@+id/btn_before_version_board_dialog"
                            android:layout_width="120dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/btn_background"
                            android:paddingRight="5dp"
                            android:text="이전버전"
                            android:textColor="@android:color/white" />

                        <Button
                            android:id="@+id/btn_after_version_board_dialog"
                            android:layout_width="120dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/btn_background"
                            android:paddingRight="5dp"
                            android:text="변경버전"
                            android:textColor="@android:color/white" />

                        <Button
                            android:id="@+id/btn_image_board_dialog"
                            android:layout_width="120dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/btn_background"
                            android:paddingRight="5dp"
                            android:text="이미지 등록"
                            android:textColor="@android:color/white" />

                        <Button
                            android:id="@+id/btn_calendar_select_board_dialog"
                            android:layout_width="120dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/btn_background"
                            android:drawableRight="@drawable/icon_chnld"
                            android:paddingRight="5dp"
                            android:text="날짜선택"
                            android:textColor="@android:color/white" />

                        <EditText
                            android:id="@+id/edt_user_board_dialog"
                            android:layout_width="120dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/text_border"
                            android:paddingLeft="5dp"
                            android:text="" />

                        <Spinner
                            android:id="@+id/temp8_spinner_board_dialog"
                            android:layout_width="120dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/spinner_background"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="900dp"
                            android:layout_height="53dp">

                            <EditText
                                android:id="@+id/edt_Contents_board_dialog"
                                android:layout_width="900dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/text_border"
                                android:paddingLeft="5dp"
                                android:text="" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="#F0F0F0"
                                android:text="  변경사항 입력  " />
                        </RelativeLayout>

                        <Button
                            android:id="@+id/btn_item_list_update_dialog"
                            android:layout_width="120dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/btn_background"
                            android:text="수정"
                            android:textColor="@android:color/white" />

                        <Button
                            android:id="@+id/btn_item_list_cancel_dialog"
                            android:layout_width="120dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/btn_background"
                            android:text="취소"
                            android:textColor="@android:color/white" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edt_Version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="변경버전 입력"
                            android:inputType="textPersonName"
                            android:visibility="gone" />


                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>