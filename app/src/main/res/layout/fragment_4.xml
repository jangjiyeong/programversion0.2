<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!-- TODO: Update blank fragment layout -->





            <LinearLayout
                android:id="@+id/layout_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/menu_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:visibility="gone">


                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="10dp"
                                android:text="모델"></TextView>

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="20dp"
                                android:text="카메라"></TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/temp1_spinner_update"
                                android:layout_width="120dp"
                                android:layout_height="44dp"
                                android:layout_below="@+id/yes_btn"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:background="@drawable/spinner_background"
                                android:visibility="gone"/>

                            <Spinner
                                android:id="@+id/temp2_spinner_update"
                                android:layout_width="120dp"
                                android:layout_height="44dp"
                                android:layout_below="@+id/yes_btn"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/spinner_background"
                                android:visibility="gone"/>


                            <Button
                                android:id="@+id/btn_before_version_update"
                                android:layout_width="120dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/btn_background"
                                android:paddingRight="5dp"
                                android:text="이전버전"
                                android:textColor="@android:color/white"
                                android:visibility="gone"/>

                            <Button
                                android:id="@+id/btn_after_version_update"
                                android:layout_width="120dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/btn_background"
                                android:paddingRight="5dp"
                                android:text="변경버전"
                                android:textColor="@android:color/white"
                                android:visibility="gone"/>

                            <Button
                                android:id="@+id/btn_calendar_select_update"
                                android:layout_width="120dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/btn_background"
                                android:drawableRight="@drawable/icon_chnld"
                                android:paddingRight="5dp"
                                android:text="날짜선택"
                                android:textColor="@android:color/white" />

                            <Button
                                android:id="@+id/btn_select_search_update"
                                android:layout_width="120dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/btn_background"
                                android:text="검색"
                                android:textColor="@android:color/white" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_Version"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:hint="변경버전 입력"
                                android:inputType="textPersonName"
                                android:visibility="gone" />


                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="20dp">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#0084C4"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/list_tv_temp1"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="No"
                            android:textColor="@android:color/white"
                            android:textSize="18dp"
                            android:visibility="gone"></TextView>

                        <TextView
                            android:id="@+id/list_tv_temp2"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="배포일자"
                            android:textColor="@android:color/white"
                            android:textSize="18dp"></TextView>

                        <TextView
                            android:id="@+id/list_tv_temp3"
                            android:layout_width="370dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="공통 내역"
                            android:textColor="@android:color/white"
                            android:textSize="18dp"></TextView>

                        <TextView
                            android:id="@+id/list_tv_temp4"
                            android:layout_width="195dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="소프트웨어"
                            android:textColor="@android:color/white"
                            android:textSize="18dp"></TextView>

                        <TextView
                            android:id="@+id/list_tv_temp5"
                            android:layout_width="195dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="펌웨어"
                            android:textColor="@android:color/white"
                            android:textSize="18dp"></TextView>

                        <TextView
                            android:id="@+id/list_tv_temp6"
                            android:layout_width="245dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="전자보드"
                            android:textColor="@android:color/white"
                            android:textSize="18dp"></TextView>

                        <TextView
                            android:id="@+id/list_tv_temp7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="세트유무"
                            android:textColor="@android:color/white"
                            android:textSize="18dp"></TextView>


                    </LinearLayout>
                    <ListView
                        android:id="@+id/lv_list_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/linear"
                        android:layout_alignParentTop="true"
                        android:divider="@null"></ListView>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>